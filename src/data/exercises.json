    {
      "id": "exercise_002",
      "title": "Verb Conjugation: Present Tense",
      "description": "Fill in verbs in present tense",
      "type": "fill_blanks_sentences",
      "level": 1,
      "xp_reward": 30,
      "instructions": "Fill in verbs in present tense.",
      "example": "Jeg bor i Norge. (I live in Norway.)",
      "content": {
        "sentences": [
          {
            "id": "sentence_001",
            "text": "Jeg [BLANK] (å hete) Ken.",
            "correct_answer": "heter",
            "explanation": "Å hete (to be called) → heter (am called)"
          },
          {
            "id": "sentence_002", 
            "text": "Jeg [BLANK] (å komme) fra England.",
            "correct_answer": "kommer",
            "explanation": "Å komme (to come) → kommer (come)"
          },
          {
            "id": "sentence_003",
            "text": "Ken [BLANK] (å reise) med tog fra Oslo til Trondheim.",
            "correct_answer": "reiser",
            "explanation": "Å reise (to travel) → reiser (travels)"
          },
          {
            "id": "sentence_004",
            "text": "Ken [BLANK] (å snakke) med Monika.",
            "correct_answer": "snakker",
            "explanation": "Å snakke (to speak) → snakker (speaks)"
          },
          {
            "id": "sentence_005",
            "text": "Hun [BLANK] (å bo) i Trondheim.",
            "correct_answer": "bor",
            "explanation": "Å bo (to live) → bor (lives)"
          }
        ]
      },
      "vocabulary": [
        {
          "norwegian": "å hete",
          "english": "to be called",
          "present": "heter",
          "example": "Jeg heter Ken."
        },
        {
          "norwegian": "å komme",
          "english": "to come",
          "present": "kommer",
          "example": "Jeg kommer fra England."
        },
        {
          "norwegian": "å reise",
          "english": "to travel",
          "present": "reiser",
          "example": "Ken reiser med tog."
        },
        {
          "norwegian": "å snakke",
          "english": "to speak",
          "present": "snakker",
          "example": "Ken snakker med Monika."
        },
        {
          "norwegian": "å bo",
          "english": "to live",
          "present": "bor",
          "example": "Hun bor i Trondheim."
        }
      ],
      "explanation": "This exercise helps you practice conjugating Norwegian verbs in the present tense. Most verbs add -r to the infinitive form to create the present tense."
